{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["dom", "es2016"],
    "jsx": "preserve"
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./typescript/**/*.ts",
    "./typescript/**/*.tsx",
    "./typings/**/*.d.ts"
  ]
}
